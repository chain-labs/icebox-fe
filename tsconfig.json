{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/styles/*": ["src/styles/*"],
            "@/pages/*": ["src/pages/*"],
            "@/common/*": ["src/common/*"],
            "@/modules/*": ["src/modules/*"],
            "@/public/*": ["src/../public/*"],
            "@/src/*": ["src/*"],
        },
        "target": "ES5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "incremental": true,
        "jsx": "preserve"
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/modules/navigation/Navbar/Navbar.stories.js"],
    "exclude": ["node_modules"]
}
